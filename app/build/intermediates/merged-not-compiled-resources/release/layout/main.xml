<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorSurface"
	android:fitsSystemWindows="true">
	
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorSurface"
		android:elevation="0dp"
		app:elevation="0dp">
		
		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:paddingStart="4dp"
			android:paddingEnd="16dp"
			app:layout_scrollFlags="scroll|enterAlways">
			
			<ImageView
				android:id="@+id/menu_button"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_gravity="start|center_vertical"
				android:padding="12dp"
				android:src="@drawable/icon_menu_round"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:contentDescription="Menu"
				android:tint="?attr/colorOnSurface" />
			
			<TextView
				android:id="@+id/toolbar_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="NoteX"
				android:textAppearance="?attr/textAppearanceHeadlineSmall"
				android:textColor="?attr/colorOnSurface"
				android:fontFamily="sans-serif-medium" />
				
		</com.google.android.material.appbar.MaterialToolbar>
		
		<!-- Search Bar -->
		<LinearLayout
			android:id="@+id/search_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="16dp"
			android:background="@drawable/search_background_material3"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			android:clickable="true"
			android:focusable="true">
			
			<ImageView
				android:id="@+id/search_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/icon_search_round"
				android:tint="?attr/colorOnSurfaceVariant"
				android:contentDescription="Search" />
			
			<EditText
				android:id="@+id/search_edit"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="12dp"
				android:background="@android:color/transparent"
				android:textAppearance="?attr/textAppearanceBodyLarge"
				android:textColor="?attr/colorOnSurface"
				android:textColorHint="?attr/colorOnSurfaceVariant"
				android:hint="Search notes and notebooks"
				android:singleLine="true"
				android:imeOptions="actionSearch"
				android:inputType="text" />
				
		</LinearLayout>
		
	</com.google.android.material.appbar.AppBarLayout>
	
	<androidx.core.widget.NestedScrollView
		android:id="@+id/nested_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:overScrollMode="never"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		
		<LinearLayout
			android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:paddingBottom="88dp">
			
			<!-- Notebooks Section -->
			<TextView
				android:id="@+id/notebooks_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="16dp"
				android:text="Notebooks"
				android:textAppearance="?attr/textAppearanceHeadlineSmall"
				android:textColor="?attr/colorOnBackground"
				android:fontFamily="sans-serif-medium" />
			
			<LinearLayout
				android:id="@+id/empty_notebooks_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="32dp"
				android:gravity="center"
				android:orientation="vertical"
				android:visibility="gone">
				
				<ImageView
					android:id="@+id/empty_notebooks_icon"
					android:layout_width="72dp"
					android:layout_height="72dp"
					android:layout_marginBottom="16dp"
					android:src="@drawable/icon_book_round"
					android:tint="?attr/colorPrimary"
					android:alpha="0.6"
					android:contentDescription="No notebooks" />
				
				<TextView
					android:id="@+id/empty_notebooks_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:text="No notebooks yet"
					android:textAppearance="?attr/textAppearanceTitleMedium"
					android:textColor="?attr/colorOnSurfaceVariant"
					android:gravity="center" />
				
				<TextView
					android:id="@+id/empty_notebooks_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Create notebooks to organize your notes"
					android:textAppearance="?attr/textAppearanceBodyMedium"
					android:textColor="?attr/colorOnSurfaceVariant"
					android:gravity="center"
					android:alpha="0.8" />
					
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/notebooks_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" />
			
			<!-- Notes Section -->
			<TextView
				android:id="@+id/notes_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:layout_marginBottom="16dp"
				android:text="Recent Notes"
				android:textAppearance="?attr/textAppearanceHeadlineSmall"
				android:textColor="?attr/colorOnBackground"
				android:fontFamily="sans-serif-medium" />
			
			<LinearLayout
				android:id="@+id/empty_notes_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="32dp"
				android:gravity="center"
				android:orientation="vertical"
				android:visibility="gone">
				
				<ImageView
					android:id="@+id/empty_notes_icon"
					android:layout_width="72dp"
					android:layout_height="72dp"
					android:layout_marginBottom="16dp"
					android:src="@drawable/icon_description_round"
					android:tint="?attr/colorPrimary"
					android:alpha="0.6"
					android:contentDescription="No notes" />
				
				<TextView
					android:id="@+id/empty_notes_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:text="No notes yet"
					android:textAppearance="?attr/textAppearanceTitleMedium"
					android:textColor="?attr/colorOnSurfaceVariant"
					android:gravity="center" />
				
				<TextView
					android:id="@+id/empty_notes_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Tap the + button to create your first note"
					android:textAppearance="?attr/textAppearanceBodyMedium"
					android:textColor="?attr/colorOnSurfaceVariant"
					android:gravity="center"
					android:alpha="0.8" />
					
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/notes_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" />
				
		</LinearLayout>
		
	</androidx.core.widget.NestedScrollView>
	
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_add"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="bottom|end"
		android:contentDescription="Create note"
		app:srcCompat="@drawable/icon_add_round"
		app:backgroundTint="?attr/colorPrimaryContainer"
		app:tint="?attr/colorOnPrimaryContainer"
		app:elevation="6dp"
		app:hoveredFocusedTranslationZ="8dp"
		app:pressedTranslationZ="12dp"
		app:shapeAppearance="@style/ShapeAppearance.NoteX.CornerLarge"
		app:maxImageSize="24dp" />
		
</androidx.coordinatorlayout.widget.CoordinatorLayout>
