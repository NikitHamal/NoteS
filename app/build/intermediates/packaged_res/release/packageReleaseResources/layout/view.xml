<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorSurface"
	android:fitsSystemWindows="true">
	
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorSurface"
		android:elevation="0dp"
		app:elevation="0dp">
		
		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:paddingStart="4dp"
			android:paddingEnd="16dp">
			
			<ImageView
				android:id="@+id/back_button"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_gravity="start|center_vertical"
				android:padding="12dp"
				android:src="@drawable/icon_arrow_back_round"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:contentDescription="Back"
				android:tint="?attr/colorOnSurface" />
			
			<TextView
				android:id="@+id/view_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Note"
				android:textAppearance="?attr/textAppearanceHeadlineSmall"
				android:textColor="?attr/colorOnSurface"
				android:fontFamily="sans-serif-medium" />
			
			<ImageView
				android:id="@+id/edit_button"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_gravity="end|center_vertical"
				android:padding="12dp"
				android:src="@drawable/icon_edit_round"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:contentDescription="Edit"
				android:tint="?attr/colorPrimary" />
				
		</com.google.android.material.appbar.MaterialToolbar>
		
	</com.google.android.material.appbar.AppBarLayout>
	
	<androidx.core.widget.NestedScrollView
		android:id="@+id/nested_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:overScrollMode="never"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		
		<LinearLayout
			android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp">
			
			<!-- Note Title -->
			<TextView
				android:id="@+id/note_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				android:text="Note Title"
				android:textAppearance="?attr/textAppearanceHeadlineMedium"
				android:textColor="?attr/colorOnBackground"
				android:fontFamily="sans-serif-medium"
				android:lineSpacingExtra="4dp" />
			
			<!-- Notebook Chip -->
			<com.google.android.material.chip.Chip
				android:id="@+id/notebook_chip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="24dp"
				android:text="Personal"
				android:textAppearance="?attr/textAppearanceLabelMedium"
				app:chipBackgroundColor="?attr/colorSecondaryContainer"
				app:chipStrokeWidth="0dp"
				app:chipIcon="@drawable/icon_book_round"
				app:chipIconTint="?attr/colorOnSecondaryContainer"
				app:chipIconSize="16dp"
				app:ensureMinTouchTargetSize="false"
				android:visibility="gone" />
			
			<!-- Note Content Card -->
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
				app:cardCornerRadius="16dp"
				app:cardElevation="0dp"
				app:strokeWidth="0dp">
				
				<TextView
					android:id="@+id/note_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="20dp"
					android:text="Note content goes here..."
					android:textAppearance="?attr/textAppearanceBodyLarge"
					android:textColor="?attr/colorOnSurface"
					android:lineSpacingExtra="6dp"
					android:textIsSelectable="true" />
					
			</com.google.android.material.card.MaterialCardView>
			
		</LinearLayout>
		
	</androidx.core.widget.NestedScrollView>
	
</androidx.coordinatorlayout.widget.CoordinatorLayout>
