<!-- res/layout/bottom_sheet_options.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    android:background="@drawable/bottom_sheet_background"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Drag Handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_drag_handle" />

    <!-- Options Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Edit Option -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_edit"
            style="@style/Widget.NoteX.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Edit"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/icon_edit_round"
            app:iconTint="?attr/colorOnSurface"/>

        <!-- Rename Option -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_rename"
            style="@style/Widget.NoteX.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Rename"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/icon_edit_round"
            app:iconTint="?attr/colorOnSurface"/>

        <!-- Delete Option -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_delete"
            style="@style/Widget.NoteX.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Delete"
            android:textColor="?attr/colorError"
            app:icon="@drawable/icon_delete_round"
            app:iconTint="?attr/colorError"/>

        <!-- Export Option -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_export"
            style="@style/Widget.NoteX.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Export"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/icon_export_round"
            app:iconTint="?attr/colorOnSurface"/>

        <!-- Share Option -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/option_share"
            style="@style/Widget.NoteX.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/icon_share_round"
            app:iconTint="?attr/colorOnSurface"/>

    </LinearLayout>
</LinearLayout>