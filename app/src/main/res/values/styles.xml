<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Material 3 Color System -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_theme_light_surfaceContainerHighest</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainerLowest">@color/md_theme_light_surfaceContainerLowest</item>
        
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.NoteX.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.NoteX.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.NoteX.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.NoteX.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.NoteX.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.NoteX.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.NoteX.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.NoteX.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.NoteX.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.NoteX.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.NoteX.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.NoteX.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.NoteX.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.NoteX.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.NoteX.LabelSmall</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.NoteX.CornerExtraLarge</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.NoteX.CornerLarge</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.NoteX.CornerMedium</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.NoteX.CornerSmall</item>
        
        <!-- Window flags -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.NoteX.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.NoteX.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.NoteX.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.NoteX.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.NoteX.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.NoteX.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.NoteX.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.NoteX.CornerExtraLarge" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="ShapeAppearance.NoteX.CornerLarge" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.NoteX.CornerMedium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.NoteX.CornerSmall" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Component Styles -->
    <style name="Widget.NoteX.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NoteX.CornerMedium</item>
    </style>
    
    <style name="Widget.NoteX.Button.TextButton.Icon" parent="Widget.NoteX.Button.TextButton">
        <item name="iconSize">24dp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>
    
    <style name="Widget.NoteX.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.NoteX.CornerLarge</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
    
    <style name="Widget.NoteX.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.NoteX.CornerMedium</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>
    
    <style name="Widget.NoteX.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.NoteX.CornerMedium</item>
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
    
    <style name="Widget.NoteX.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.NoteX.BottomSheet</item>
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
    </style>
    
    <style name="ShapeAppearance.NoteX.BottomSheet" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Legacy styles for backwards compatibility -->
    <style name="TextButton" parent="Widget.NoteX.Button.TextButton.Icon" />
    
    <style name="FabShapeAppearance" parent="ShapeAppearance.NoteX.CornerLarge" />
    
    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurfaceContainer</item>
    </style>
    
    <!-- Search View Style -->
    <style name="Widget.NoteX.SearchView" parent="">
        <item name="android:background">@drawable/search_background_material3</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Debug Activity Style -->
    <style name="AppTheme.DebugActivity" parent="AppTheme">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>