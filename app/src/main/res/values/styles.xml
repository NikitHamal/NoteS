<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#7C4DFF</item>
        <item name="colorPrimaryVariant">#6200EA</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <item name="android:fontFamily">@font/reg</item>
        <item name="android:includeFontPadding">false</item>
        
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#7C4DFF</item>
        <item name="colorSecondaryVariant">#6200EA</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnSurface">#000000</item>
        
        <!-- Remove default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Add these for Material 3 components -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
    </style>
    
    <!-- Shape Appearance for Bottom Sheet -->
    <style name="ShapeAppearance.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Text Button Style -->
    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="FabShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">#FFFFFF</item>
    </style>
</resources>