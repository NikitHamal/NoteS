<!-- res/layout/bottom_sheet_options.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Edit Option -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_edit"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="?attr/colorOnSurface"
                app:icon="@drawable/icon_edit_round"
                app:iconTint="?attr/colorOnSurface"/>

            <!-- Rename Option -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_rename"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rename"
                android:textColor="?attr/colorOnSurface"
                app:icon="@drawable/icon_edit_round"
                app:iconTint="?attr/colorOnSurface"/>

            <!-- Delete Option -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_delete"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/error"
                app:icon="@drawable/icon_delete_round"
                app:iconTint="@color/error"/>

            <!-- Export Option -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_export"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export"
                android:textColor="?attr/colorOnSurface"
                app:icon="@drawable/icon_export_round"
                app:iconTint="?attr/colorOnSurface"/>

            <!-- Share Option -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_share"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="?attr/colorOnSurface"
                app:icon="@drawable/icon_share_round"
                app:iconTint="?attr/colorOnSurface"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>